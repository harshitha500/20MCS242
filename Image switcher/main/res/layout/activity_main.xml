        android:id="@+id/Iswitcher"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="361dp"/>

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
